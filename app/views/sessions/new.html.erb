
<div class="center">
  <h1>Sign in</h1>
      <%= simple_form_for(:session, url: sessions_path) do |f| %>

        <%= f.input :email %>

        <%= f.input :password %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>

      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>
